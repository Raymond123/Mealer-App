<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Cream"
    android:paddingBottom="?attr/actionBarSize">
        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.667"
            app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="410dp"
            android:layout_height="730dp"
            android:orientation="vertical"
            android:paddingHorizontal="10dp"
            android:paddingTop="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.666"
            app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:id="@+id/menuItemInfo"
                    android:layout_width="375dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Menu Item Information"
                    android:textColor="@color/darkGreen"
                    android:textSize="28sp" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

                <ImageView
                    android:id="@+id/mealImage"
                    android:layout_width="375dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/camera_food_mealer" />

                <TextView
                    android:id="@+id/uploadImageText"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Upload picture of food"
                    android:textColor="@color/darkGreen"
                    android:textSize="12sp" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="2dp" />

                <TextView
                    android:id="@+id/itemNameLabel"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="start"
                    android:text="@string/item_name"
                    android:textColor="@color/darkGreen"
                    android:textSize="22sp" />

                <EditText
                    android:id="@+id/itemNameText"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:autofillHints=""
                    android:backgroundTint="@color/darkGreen"
                    android:ems="10"
                    android:hint="@string/name_of_item"
                    android:inputType="textPersonName"
                    android:minHeight="48dp"
                    android:textColor="@color/darkGreen"
                    android:textColorHint="@color/lightGreen" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

                <TextView
                    android:id="@+id/itemDescriptionLabel"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="start"
                    android:text="@string/description_item"
                    android:textColor="@color/darkGreen"
                    android:textSize="22sp" />

                <EditText
                    android:id="@+id/itemDescriptionText"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:autofillHints=""
                    android:backgroundTint="@color/darkGreen"
                    android:ems="10"
                    android:gravity="start|top"
                    android:hint="@string/short_description"
                    android:inputType="textMultiLine"
                    android:minHeight="48dp"
                    android:textColor="@color/darkGreen"
                    android:textColorHint="@color/lightGreen" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

                <TextView
                    android:id="@+id/itemCaloriesLabel"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="start"
                    android:text="@string/calories"
                    android:textColor="@color/darkGreen"
                    android:textSize="22sp" />

                <EditText
                    android:id="@+id/itemCaloriesText"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:autofillHints=""
                    android:backgroundTint="@color/darkGreen"
                    android:ems="10"
                    android:hint="@string/calories_in_item"
                    android:inputType="number"
                    android:minHeight="48dp"
                    android:textColor="@color/darkGreen"
                    android:textColorHint="@color/lightGreen" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

                <TextView
                    android:id="@+id/itemIngredientsLabel"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="start"
                    android:text="@string/ingredients"
                    android:textColor="@color/darkGreen"
                    android:textSize="22sp" />

                <EditText
                    android:id="@+id/itemIngredients"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:autofillHints=""
                    android:backgroundTint="@color/darkGreen"
                    android:ems="10"
                    android:gravity="start|top"
                    android:hint="@string/separate_ingredients"
                    android:inputType="textMultiLine"
                    android:minHeight="48dp"
                    android:textColor="@color/darkGreen"
                    android:textColorHint="@color/lightGreen" />

                <CheckBox
                    android:id="@+id/isActiveBox"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:minHeight="48dp"
                    android:text="@string/set_item_as_active"
                    android:textColor="@color/darkGreen"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/addNewItem"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/lightBrown"
                    android:text="@string/add_item_to_menu" />

                <Button
                    android:id="@+id/delete"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/lightBrown"
                    android:text="@string/delete_menu_item" />

        </LinearLayout>
        </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>